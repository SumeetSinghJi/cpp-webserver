{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file", // MingW: g++.exe
            "command": "C:/Program Files/LLVM/bin/clang++.exe", // MingW: "C:\\msys64\\mingw64\\bin\\g++.exe", 
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/src", // points to main.cpp under /src
                "-I${workspaceFolder}/src/OpenSSL-Win64/include", // OpenSSL
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${workspaceFolder}/src/${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}/src/OpenSSL-Win64/lib", // OpenSSL
                "-lws2_32",     // #include <winsock.h>
                "-lssl",        // OpenSSL
                "-lcrypto",     // OpenSSL
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" // MingW/Clang: "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}